<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="Cybersource_DeviceFingerprintEnabled">
                <display-name xml:lang="x-default">Enable DeviceFingerprint Service</display-name>
                <description xml:lang="x-default">Enable or Disable DeviceFingerprint for Cybersource Cartridge</description>
                <type>boolean</type>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_OrganizationId">
                <display-name xml:lang="x-default">Organization id</display-name>
                <description xml:lang="x-default">TOrganization ID for the device fingerprint check</description>
                <type>string</type>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>1snn5n9w</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_ThreadMatrixUrl">
                <display-name xml:lang="x-default">Thread Matrix Url</display-name>
                <description xml:lang="x-default">Thread Matrix URL pointing to JS that generates and retrieves the fingerprint</description>
                <type>string</type>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>https://h.online-metrix.net</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_DeviceFingerprintTTL">
                <display-name xml:lang="x-default">TTL (Time To Live)</display-name>
                <description xml:lang="x-default">Time, in milliseconds between generating a new fingerprint for any given customer session</description>
                <type>string</type>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>86,400,000</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Cybersource_DeviceFingerprint">
                <display-name xml:lang="x-default">Device Finger Print Configuration</display-name>
                <attribute attribute-id="Cybersource_DeviceFingerprintEnabled"/>
                <attribute attribute-id="Cybersource_OrganizationId"/>
                <attribute attribute-id="Cybersource_ThreadMatrixUrl"/>
                <attribute attribute-id="Cybersource_DeviceFingerprintTTL"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>