<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="Cybersource_CartridgeEnabled">
                <display-name xml:lang="x-default">Enable Cybersource Cartridge</display-name>
                <description xml:lang="x-default">Enable or disable Cybersource Cartridge. If disabled none of the Cybersource services are invoked.</description>
                <type>boolean</type>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_MerchantID">
                <display-name xml:lang="x-default">Cybersource MerchantID</display-name>
                <description xml:lang="x-default">Cybersource Merchant ID</description>
                <type>string</type>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_MerchantKeyId">
                <display-name xml:lang="x-default">Cybersource REST KeyId</display-name>
                <description xml:lang="x-default">Cybersource REST Key ID</description>
                <type>string</type>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_MerchantKeySecret">
                <display-name xml:lang="x-default">Cybersource REST Secret Key</display-name>
                <description xml:lang="x-default">Cybersource REST Secret Key</description>
                <type>password</type>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_DeveloperId">
                <display-name xml:lang="x-default">DeveloperId</display-name>
                <description xml:lang="x-default">Unique identifier generated by Cybersource for System Integrator</description>
                <type>string</type>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="Cybersource_CardTransactionType">
                <display-name xml:lang="x-default">Credit/Debit Card Transaction Type</display-name>
                <type>enum-of-string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <display xml:lang="x-default">Auth</display>
                        <value>auth</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Sale</display>
                        <value>sale</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Cybersource_Core">
                <display-name xml:lang="x-default">Cybersource Cartridge configuration</display-name>
                <attribute attribute-id="Cybersource_CartridgeEnabled"/>
                <attribute attribute-id="Cybersource_MerchantID"/>
                <attribute attribute-id="Cybersource_MerchantKeyId"/>
                <attribute attribute-id="Cybersource_MerchantKeySecret"/>
                <attribute attribute-id="Cybersource_DeveloperId"/>
                <attribute attribute-id="Cybersource_CardTransactionType"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
